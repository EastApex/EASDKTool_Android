            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
