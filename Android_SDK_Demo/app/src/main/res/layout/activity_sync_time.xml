<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/adapter_recyclerview_padding_start"
        android:paddingEnd="@dimen/adapter_recyclerview_padding_start">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/sync_time"
                android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />
        </RelativeLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height">

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/year"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

            <TextView
                android:id="@+id/time_year"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height">

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/month"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

            <TextView
                android:id="@+id/time_month"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height">

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/day"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

            <TextView
                android:id="@+id/time_day"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height">

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/hour"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

            <TextView
                android:id="@+id/time_hour"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height">

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/minute"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

            <TextView
                android:id="@+id/time_minute"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height">

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/second"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

            <TextView
                android:id="@+id/time_second"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height">

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/hour_system"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

            <TextView
                android:id="@+id/hour_system"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height">

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/current_hour"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

            <TextView
                android:id="@+id/current_hour"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height">

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/current_minute"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

            <TextView
                android:id="@+id/current_minute"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height">

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/time_zone"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

            <TextView
                android:id="@+id/time_zone"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height">

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/sync_mode"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

            <TextView
                android:id="@+id/sync_mode"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
        </TableRow>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/adapter_recyclerview_padding_start"
            android:layout_marginTop="@dimen/title_height"
            android:layout_marginEnd="@dimen/adapter_recyclerview_padding_start"
            android:layout_marginBottom="@dimen/adapter_recyclerview_margin_top"
            android:background="@color/dialog_submit_txt_color"
            android:gravity="center"
            android:text="@string/sync_to_current_time"
            android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />
    </LinearLayout>
</ScrollView>