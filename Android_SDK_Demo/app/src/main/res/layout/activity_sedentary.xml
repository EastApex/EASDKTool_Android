<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/adapter_recyclerview_padding_start"
    android:paddingEnd="@dimen/adapter_recyclerview_padding_start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/sedentary_monitoring"
            android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/interval_time"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <TextView
                    android:id="@+id/interval_time"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@color/frame_color"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/cycle"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <TextView
                    android:id="@+id/cycle"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@color/frame_color"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/start_time"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@color/frame_color"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/end_time"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@color/frame_color"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/steps"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <TextView
                    android:id="@+id/steps"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/start_sit"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <TextView
                    android:id="@+id/start_sit"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@color/frame_color"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/break_switch"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <TextView
                    android:id="@+id/break_switch"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@color/frame_color"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/break_start_hour"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <TextView
                    android:id="@+id/break_start_hour"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@color/frame_color"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/break_start_minute"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <TextView
                    android:id="@+id/break_start_minute"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@color/frame_color"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/break_end_hour"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <TextView
                    android:id="@+id/break_end_hour"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@color/frame_color"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="@string/break_end_minute"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <TextView
                    android:id="@+id/break_end_minute"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@color/frame_color"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
            </TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginStart="@dimen/adapter_recyclerview_padding_start"
                android:layout_marginTop="@dimen/title_height"
                android:layout_marginEnd="@dimen/adapter_recyclerview_padding_start"
                android:layout_marginBottom="@dimen/adapter_recyclerview_margin_top"
                android:background="@color/dialog_submit_txt_color"
                android:gravity="center"
                android:text="@string/ok"
                android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>