<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/frame_color"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dimen_18"
            android:layout_marginEnd="@dimen/dimen_18"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/reply"
                android:textColor="@android:color/black"
                android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_177"
                android:overScrollMode="never"
                android:paddingStart="@dimen/dimen_18"
                android:paddingEnd="@dimen/dimen_18"
                android:scrollbars="none" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@android:color/black"
                android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />
        </LinearLayout>

</RelativeLayout>