<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/adapter_recyclerview_padding_start"
    android:paddingEnd="@dimen/adapter_recyclerview_padding_start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ota"
            android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/firm_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginStart="@dimen/adapter_recyclerview_padding_start"
                android:layout_marginTop="@dimen/title_height"
                android:layout_marginEnd="@dimen/adapter_recyclerview_padding_start"
                android:background="@color/dialog_submit_txt_color"
                android:gravity="center"
                android:text="@string/firmware_version"
                android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dial_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginStart="@dimen/adapter_recyclerview_padding_start"
                android:layout_marginTop="@dimen/title_height"
                android:layout_marginEnd="@dimen/adapter_recyclerview_padding_start"
                android:background="@color/dialog_submit_txt_color"
                android:gravity="center"
                android:text="@string/dial_update"
                android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/agps_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginStart="@dimen/adapter_recyclerview_padding_start"
                android:layout_marginTop="@dimen/title_height"
                android:layout_marginEnd="@dimen/adapter_recyclerview_padding_start"
                android:background="@color/dialog_submit_txt_color"
                android:gravity="center"
                android:text="@string/agps_update"
                android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/custom_dial"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginStart="@dimen/adapter_recyclerview_padding_start"
                android:layout_marginTop="@dimen/title_height"
                android:layout_marginEnd="@dimen/adapter_recyclerview_padding_start"
                android:background="@color/dialog_submit_txt_color"
                android:gravity="center"
                android:text="@string/custom_dial"
                android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/custom_diff_color_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginStart="@dimen/adapter_recyclerview_padding_start"
                android:layout_marginTop="@dimen/title_height"
                android:layout_marginEnd="@dimen/adapter_recyclerview_padding_start"
                android:background="@color/dialog_submit_txt_color"
                android:gravity="center"
                android:text="@string/diff_color_dial"
                android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>