<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/cycle"
            android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/adapter_recyclerview_padding_start"
            android:paddingEnd="@dimen/adapter_recyclerview_padding_start">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginTop="@dimen/zero"
                android:layout_marginBottom="@dimen/adapter_recyclerview_margin_bottom"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/monday_check"
                    android:gravity="start|center_vertical"
                    android:text="@string/mon"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <CheckBox
                    android:id="@+id/monday_check"
                    android:layout_width="@dimen/circle_box_width"
                    android:layout_height="@dimen/circle_box_width"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/check_box_frame"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginTop="@dimen/zero"
                android:layout_marginBottom="@dimen/adapter_recyclerview_margin_bottom"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/tuesday_check"
                    android:gravity="start|center_vertical"
                    android:text="@string/tue"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <CheckBox
                    android:id="@+id/tuesday_check"
                    android:layout_width="@dimen/circle_box_width"
                    android:layout_height="@dimen/circle_box_width"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/check_box_frame"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginTop="@dimen/zero"
                android:layout_marginBottom="@dimen/adapter_recyclerview_margin_bottom"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/wednesday_check"
                    android:gravity="start|center_vertical"
                    android:text="@string/wed"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <CheckBox
                    android:id="@+id/wednesday_check"
                    android:layout_width="@dimen/circle_box_width"
                    android:layout_height="@dimen/circle_box_width"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/check_box_frame"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginTop="@dimen/zero"
                android:layout_marginBottom="@dimen/adapter_recyclerview_margin_bottom"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/thursday_check"
                    android:gravity="start|center_vertical"
                    android:text="@string/thur"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <CheckBox
                    android:id="@+id/thursday_check"
                    android:layout_width="@dimen/circle_box_width"
                    android:layout_height="@dimen/circle_box_width"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/check_box_frame"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginTop="@dimen/zero"
                android:layout_marginBottom="@dimen/adapter_recyclerview_margin_bottom"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/friday_check"
                    android:gravity="start|center_vertical"
                    android:text="@string/fri"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <CheckBox
                    android:id="@+id/friday_check"
                    android:layout_width="@dimen/circle_box_width"
                    android:layout_height="@dimen/circle_box_width"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/check_box_frame"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginTop="@dimen/zero"
                android:layout_marginBottom="@dimen/adapter_recyclerview_margin_bottom"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/saturday_check"
                    android:gravity="start|center_vertical"
                    android:text="@string/sat"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <CheckBox
                    android:id="@+id/saturday_check"
                    android:layout_width="@dimen/circle_box_width"
                    android:layout_height="@dimen/circle_box_width"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/check_box_frame"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginTop="@dimen/zero"
                android:layout_marginBottom="@dimen/adapter_recyclerview_margin_bottom"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/sunday_check"
                    android:gravity="start|center_vertical"
                    android:text="@string/sun"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <CheckBox
                    android:id="@+id/sunday_check"
                    android:layout_width="@dimen/circle_box_width"
                    android:layout_height="@dimen/circle_box_width"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/check_box_frame"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginTop="@dimen/zero"
                android:layout_marginBottom="@dimen/adapter_recyclerview_margin_bottom"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/once_check"
                    android:gravity="start|center_vertical"
                    android:text="@string/only_once"
                    android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

                <CheckBox
                    android:id="@+id/once_check"
                    android:layout_width="@dimen/circle_box_width"
                    android:layout_height="@dimen/circle_box_width"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/check_box_frame"
                    android:button="@null"
                    android:checked="true" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:layout_marginStart="@dimen/adapter_recyclerview_padding_start"
                android:layout_marginTop="@dimen/title_height"
                android:layout_marginEnd="@dimen/adapter_recyclerview_padding_start"
                android:background="@color/dialog_submit_txt_color"
                android:gravity="center"
                android:text="@string/ok"
                android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

