<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/adapter_recyclerview_padding_start"
    android:paddingEnd="@dimen/adapter_recyclerview_padding_start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/heart_rate_monitoring"
            android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />
    </RelativeLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/disturb_switch"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

        <TextView
            android:id="@+id/heart_switch"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/interval_time"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

        <TextView
            android:id="@+id/interval_time"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/alarm_switch"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

        <TextView
            android:id="@+id/alarm_switch"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/max_heart_rate"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

        <TextView
            android:id="@+id/max_heart_rate"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/min_heart_rate"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

        <TextView
            android:id="@+id/min_heart_rate"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
    </TableRow>
</LinearLayout>