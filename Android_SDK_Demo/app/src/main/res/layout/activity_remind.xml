<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/adapter_recyclerview_padding_start"
    android:paddingEnd="@dimen/adapter_recyclerview_padding_start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/reminder_switch"
            android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />
    </RelativeLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/reminder_mode"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

        <TextView
            android:id="@+id/reminder_mode"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center_vertical|end"
            android:text="@string/common_action_no_action"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/call"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

        <TextView
            android:id="@+id/call"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/unknown_call"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

        <TextView
            android:id="@+id/unknown_call"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/sms"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

        <TextView
            android:id="@+id/sms"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/email"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

        <TextView
            android:id="@+id/email"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/social_contact"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

        <TextView
            android:id="@+id/social_contact"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/schedule"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

        <TextView
            android:id="@+id/schedule"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:clickable="true"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
    </TableRow>
</LinearLayout>