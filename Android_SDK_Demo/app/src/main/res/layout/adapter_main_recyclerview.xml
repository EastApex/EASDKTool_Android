<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/adapter_recyclerview_child_high"
    android:layout_marginTop="@dimen/zero"
    android:layout_marginBottom="@dimen/adapter_recyclerview_margin_bottom"
    android:background="@android:color/white"
    android:paddingStart="@dimen/adapter_recyclerview_padding_start"
    android:paddingEnd="@dimen/adapter_recyclerview_padding_start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/adapter_recyclerview_device_name_txt_size" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/adapter_recyclerview_margin_top"
            android:layout_marginBottom="@dimen/zero">

            <TextView
                android:id="@+id/device_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />

            <TextView
                android:id="@+id/device_serial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/adapter_recyclerview_margin_top"
                android:layout_marginEnd="@dimen/zero"
                android:textSize="@dimen/adapter_recyclerview_device_address_txt_size" />
        </TableRow>
    </LinearLayout>
</RelativeLayout>